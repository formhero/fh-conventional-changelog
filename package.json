{
  "name": "@formhero/fh-conventional-changelog",
  "version": "2.0.2",
  "description": "Commitizen adapter following the conventional-changelog format.",
  "main": "index.js",
  "scripts": {
    "test": "echo 'Tests need to be setup!'"
  },
  "homepage": "https://github.com/formhero/fh-conventional-changelog",
  "repository": {
    "type": "git",
    "url": "https://github.com/formhero/fh-conventional-changelog.git"
  },
  "author": "Ryan Kimber <ryan.kimber@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "word-wrap": "^1.0.3"
  },
  "devDependencies": {
    "commitizen": "1.0.5",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./index"
    },
    "pre-git": {
      "pre-commit": [
        "npm test",
        "nsp check"
      ],
      "post-commit": "git status",
      "pre-push": [
        "rm -rf node_modules",
        "npm install",
        "npm test",
        "nsp check"
      ]
    }
  }
}
